/* pages/user/index.wxss */
.container {
  background-color: #ebedf0;
}
.user-box {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 4rpx 12rpx 16rpx #ebedf0;
  margin-bottom: 24px;
  padding: 24rpx;
  width: 80%;
}
.avatar {
  width: 96rpx;
  height: 96rpx;
  margin: -72rpx 25rpx 0;
  float: right;
}
.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 8rpx solid #fff;
}
.description {
  font-size: 23rpx;
  color: #9b9b9b;
  margin-top: 12rpx;
}
.tip {
  font-size: 23rpx;
  color: #635d5d;
  margin-top: 12rpx;
}
.space {
  height: 6rpx;
  position: relative;
  max-width: 400rpx;
  margin: 30rpx 0 15rpx;
  border-radius: 50rpx;
  background-color: #ddd7d7;
}
.wrapper {
  margin: 30rpx 0 1rpx 0;
  border-top: 1rpx  solid #a79d9d;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
}

